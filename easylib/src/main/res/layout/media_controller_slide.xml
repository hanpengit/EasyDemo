<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="104dp"
        android:layout_height="92dp"
        android:layout_gravity="center">

        <LinearLayout
            android:id="@+id/media_controller_slide_up_down"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/media_controller_slide_bg"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="invisible">

            <ImageView
                android:id="@+id/media_controller_slide_up_down_icon"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_marginTop="20dp"
                android:src="@mipmap/blightness" />

            <TextView
                android:id="@+id/media_controller_slide_up_down_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="20%"
                android:textColor="@android:color/white"
                android:textSize="12dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/media_controller_slide_left_right"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/media_controller_slide_bg"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="invisible">

            <ImageView
                android:id="@+id/media_controller_slide_icon"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_marginTop="20dp"
                android:scaleType="centerInside"
                android:src="@mipmap/play_fast_forward" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/media_controller_slide_time_target"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3.33dp"
                    android:layout_marginRight="5dp"
                    android:text="/"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/media_controller_slide_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="12dp" />
            </LinearLayout>
        </LinearLayout>


    </FrameLayout>
</FrameLayout>